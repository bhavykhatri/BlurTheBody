{
    "manifest_version": 3,
    "name": "Blur the body",
    "version":"1.0",

    "description": "Blurs the body when clicked for all websites",
    "icons":{
        "48": "icons/icon-48.png"
    },

    "content_scripts": [
        {
            "matches":["*://*/*"],
            "js":["blurthebody.js"]
        }
    ],
    "action":{
        "default_popup": "popup/popup.html"
    },
    "background":{
        "service_worker": "background.js"
    },
    "permissions": ["storage"]
}